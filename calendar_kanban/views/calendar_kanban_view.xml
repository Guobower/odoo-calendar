<?xml version="1.0"?>
<odoo>
    <data>

        <record id="view_calendar_event_form" model="ir.ui.view">
            <field name="model">calendar.event</field>
            <field name="inherit_id" ref="calendar.view_calendar_event_form"/>
            <field name="arch" type="xml">
                <field name="allday" position="after">
                    <field name="week_number"/>
                    <field name="weekday"/>
                </field>
            </field>
        </record>

        <record id="view_calendar_event_search" model="ir.ui.view">
            <field name="model">calendar.event</field>
            <field name="inherit_id" ref="calendar.view_calendar_event_search"/>
            <field name="arch" type="xml">
                <group position="inside">
                    <filter string="Week" icon="terp-locked" domain="[]" context="{'group_by':'week_number'}"/>
                    <filter string="Location" icon="terp-locked" domain="[]" context="{'group_by':'location'}"/>
                </group>
            </field>
        </record>

        <!-- Calendar Kanban -->
        <record id="view_calendar_event_kanban" model="ir.ui.view">
            <field name="name">Meetings Calendar</field>
            <field name="model">calendar.event</field>
            <field name="arch" type="xml">
                <kanban class="oe_background_grey" default_group_by="week_number" default_order="weekday">
                    <field name="color"/>
                    <field name="name" string="Subject"/>
                    <field name="allday" invisible="True"/>
                    <field name="start_date" string="Date"/>
                    <field name="start_datetime" string="Date"/>
                    <field name="user_id"/>
                    <field name="location"/>
                    <field name="show_as"/>
                    <field name="duration"/>
                    <field name="week_number"/>
                    <field name="weekday"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_project oe_kanban_global_click">
                                <div class="oe_dropdown_toggle oe_dropdown_kanban" groups="base.group_user">
                                    <span class="oe_e">Ã­</span>
                                    <ul class="oe_dropdown_menu">
                                        <t t-if="widget.view.is_action_enabled('edit')"><li><a type="edit">Event Settings</a></li></t>
                                        <t t-if="widget.view.is_action_enabled('delete')"><li><a type="delete">Delete</a></li></t>
                                        <li><ul class="oe_kanban_colorpicker" data-field="color"/></li>
                                    </ul>
                                </div>
                                <div class="oe_kanban_content">
                                    <h4 class="text-center"><strong><field name="name"/></strong></h4>
                                    <div class="oe_kanban_alias" style="min-height: 50px;">
                                        <field name="description"/>
                                    </div>
                                    <div class="oe_kanban_footer_left" style="margin-bottom: 0px;">
                                        <span style="color: #309;"><field name="weekday"/></span>
                                        <p t-if="allday == True" style="margin-bottom: 0px;">
                                            <strong><field name="start_date"/></strong>
                                        </p>
                                        <p t-if="allday == True" style="margin-bottom: 0px;">
                                            <strong><field name="stop_date"/></strong>
                                        </p>
                                        <p t-if="allday == False" style="margin-bottom: 0px;">
                                            <strong><field name="start_datetime"/></strong>
                                        </p>
                                        <p t-if="allday == False" style="margin-bottom: 0px;">
                                            <strong><field name="stop_datetime"/></strong>
                                        </p>
                                    </div>
                                </div>
                                <div class="oe_clear"></div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="calendar.action_calendar_event" model="ir.actions.act_window">
            <field name="view_mode">kanban,calendar,tree,form</field>
        </record>

        <record id="action_view_calendar_event_kanban" model="ir.actions.act_window.view">
            <field name="act_window_id" ref="calendar.action_calendar_event"/>
            <field name="sequence" eval="1"/>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="view_calendar_event_kanban"/>
        </record>

        <!-- Calendar Week : -->
        <record id="view_calendar_week_tree" model="ir.ui.view">
            <field name="name">calendar.week.tree</field>
            <field name="model">calendar.week</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Calendar Week" editable="bottom">
                    <field name="name"/>
                    <field name="week_number"/>
                    <field name="year_id"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                </tree>
            </field>
        </record>

        <!-- Calendar Year : -->
        <record id="view_calendar_year_form" model="ir.ui.view">
            <field name="name">calendar.year.form</field>
            <field name="model">calendar.year</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Calendar Year">
                    <header>
                        <button name="create_weeks" string="Create Weeks" type="object" class="oe_highlight"/>
                    </header>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Weeks">
                            <field name="week_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="week_number"/>
                                    <field name="date_start"/>
                                    <field name="date_end"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <record id="view_calendar_year_tree" model="ir.ui.view">
            <field name="name">calendar.year.tree</field>
            <field name="model">calendar.year</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Calendar Year">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="action_calendar_week" model="ir.actions.act_window">
            <field name="name">Calendar Week</field>
            <field name="res_model">calendar.week</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="view_calendar_week_tree"/>
        </record>

        <record id="action_calendar_year" model="ir.actions.act_window">
            <field name="name">Calendar Year</field>
            <field name="res_model">calendar.year</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_calendar_year_tree"/>
        </record>

        <menuitem
            id="menu_calendar_week"
            parent="calendar.menu_calendar_configuration"
            action="action_calendar_week"
            sequence="50"
            groups="base.group_no_one"/>

        <menuitem
            id="menu_calendar_year"
            parent="calendar.menu_calendar_configuration"
            action="action_calendar_year"
            sequence="70"
            groups="base.group_no_one"/>

    </data>
</odoo>
