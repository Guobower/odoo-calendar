<?xml version="1.0"?>
<odoo>
    <data>

        <record id="view_calendar_event_form" model="ir.ui.view">
            <field name="model">calendar.event</field>
            <field name="inherit_id" ref="calendar.view_calendar_event_form"/>
            <field name="arch" type="xml">
                <field name="allday" position="after">
                    <field name="week_id"/>
                    <field name="weekday"/>
                </field>
            </field>
        </record>

        <record id="view_calendar_event_search" model="ir.ui.view">
            <field name="model">calendar.event</field>
            <field name="inherit_id" ref="calendar.view_calendar_event_search"/>
            <field name="arch" type="xml">
                <group position="inside">
                    <filter string="Week" icon="terp-locked" domain="[]" context="{'group_by':'week_id'}"/>
                    <filter string="Month" icon="terp-locked" domain="[]" context="{'group_by':'month_id'}"/>
                    <filter string="Location" icon="terp-locked" domain="[]" context="{'group_by':'location'}"/>
                </group>
            </field>
        </record>

        <!-- Calendar Kanban -->
        <record id="view_calendar_event_kanban" model="ir.ui.view">
            <field name="name">Meetings Calendar</field>
            <field name="model">calendar.event</field>
            <field name="type">kanban</field>
            <field name="arch" type="xml">
                <kanban class="oe_background_grey" default_group_by="week_id">
                    <field name="color"/>
                    <field name="name"/>
                    <field name="allday"/>
                    <field name="start_date"/>
                    <field name="start_datetime"/>
                    <field name="user_id"/>
                    <field name="location"/>
                    <field name="show_as"/>
                    <field name="duration"/>
                    <field name="week_id"/>
                    <field name="weekday"/>
                    <field name="month_id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_color_{{record.color.raw_value}} oe_kanban_global_click_edit oe_semantic_html_override oe_kanban_card {{record.group_fancy==1 ? 'oe_kanban_card_fancy' : ''}}">
                                <div class="oe_dropdown_kanban">
                                    <div class="oe_dropdown_toggle pull-right">
                                        <i class="fa fa-bars fa-lg"/>
                                        <ul class="oe_dropdown_menu">
                                            <li>
                                                <a type="delete">Delete</a>
                                            </li>
                                            <li>
                                                <ul class="oe_kanban_colorpicker"
                                                    data-field="color"/>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="oe_clear"></div>
                                </div>
                                <div t-attf-class="oe_kanban_content">
                                    <h4><strong><field name="name"/></strong></h4>
                                    <div class="oe_kanban_footer_left" style="margin-bottom: 0px;">
                                        Week Number:
                                        <field name="week_id"/>
                                        <br/>
                                        Weekday:
                                        <field name="weekday"/>
                                        <div t-if="record.allday.raw_value">
                                            Start:
                                            <field name="start_date"/>
                                        </div>
                                        <div t-if="!record.allday.raw_value">
                                            Start:
                                            <field name="start_datetime"/>
                                        </div>
                                        Month:
                                        <field name="month_id"/>
                                    </div>
                                </div>
                                <div class="oe_clear"></div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="calendar.action_calendar_event" model="ir.actions.act_window">
            <field name="view_mode">kanban,calendar,tree,form</field>
        </record>

        <record id="action_view_calendar_event_kanban" model="ir.actions.act_window.view">
            <field name="act_window_id" ref="calendar.action_calendar_event"/>
            <field name="sequence" eval="1"/>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="view_calendar_event_kanban"/>
        </record>

        <!-- Calendar Week : -->
        <record id="view_calendar_week_form" model="ir.ui.view">
            <field name="name">calendar.week.form</field>
            <field name="model">calendar.week</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Calendar Week">
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="year_id"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record id="view_calendar_week_tree" model="ir.ui.view">
            <field name="name">calendar.week.tree</field>
            <field name="model">calendar.week</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Calendar Week" editable="bottom">
                    <field name="name"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="year_id"/>
                </tree>
            </field>
        </record>

        <!-- Calendar Month : -->
        <record id="view_calendar_month_form" model="ir.ui.view">
            <field name="name">calendar.month.form</field>
            <field name="model">calendar.month</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Calendar Month">
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="year_id"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record id="view_calendar_month_tree" model="ir.ui.view">
            <field name="name">calendar.month.tree</field>
            <field name="model">calendar.month</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Calendar Month" editable="bottom">
                    <field name="name"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="year_id"/>
                </tree>
            </field>
        </record>

        <!-- Calendar Year : -->
        <record id="view_calendar_year_form" model="ir.ui.view">
            <field name="name">calendar.year.form</field>
            <field name="model">calendar.year</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Calendar Year">
                    <header>
                        <button name="create_weeks" string="Create Weeks" type="object" class="oe_highlight"/>
                        <button name="create_months" string="Create Months" type="object" class="oe_highlight"/>
                    </header>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Weeks">
                            <field name="week_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="date_start"/>
                                    <field name="date_end"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Month">
                            <field name="month_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="date_start"/>
                                    <field name="date_end"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <record id="view_calendar_year_tree" model="ir.ui.view">
            <field name="name">calendar.year.tree</field>
            <field name="model">calendar.year</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Calendar Year">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="action_calendar_week" model="ir.actions.act_window">
            <field name="name">Calendar Week</field>
            <field name="res_model">calendar.week</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_calendar_week_tree"/>
        </record>

        <record id="action_calendar_month" model="ir.actions.act_window">
            <field name="name">Calendar Month</field>
            <field name="res_model">calendar.month</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_calendar_month_tree"/>
        </record>

        <record id="action_calendar_year" model="ir.actions.act_window">
            <field name="name">Calendar Year</field>
            <field name="res_model">calendar.year</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_calendar_year_tree"/>
        </record>

        <menuitem
            id="menu_calendar_week"
            parent="calendar.menu_calendar_configuration"
            action="action_calendar_week"
            sequence="50"
            groups="base.group_no_one"/>

        <menuitem
            id="menu_calendar_month"
            parent="calendar.menu_calendar_configuration"
            action="action_calendar_month"
            sequence="60"
            groups="base.group_no_one"/>

        <menuitem
            id="menu_calendar_year"
            parent="calendar.menu_calendar_configuration"
            action="action_calendar_year"
            sequence="70"
            groups="base.group_no_one"/>

    </data>
</odoo>
